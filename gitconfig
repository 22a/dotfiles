[include]
  path = .gituser

[core]
  editor = nvim
  hooksPath = ~/.config/git/global-hooks

[alias]
  undo-commit = reset --soft HEAD^
  unstage = reset HEAD --

[pull]
  default = current

[push]
  default = current
  followTags = true

[fetch]
  prune = true

[diff]
  compactionHeuristic = true

[status]
  showUntrackedFiles = all

[stash]
  showPatch = true

[credential]
  helper = osxkeychain

[protocol]
  version = 2
