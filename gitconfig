[include]
  path = .gituser

[core]
  editor = nvim

[alias]
  undo-commit = reset --soft HEAD^
  unstage = reset HEAD --

[commit]
  gpgsign = true

[pull]
  default = current

[push]
  default = current
  followTags = true

[fetch]
  prune = true

[diff]
  compactionHeuristic = true

[status]
  showUntrackedFiles = all

[stash]
  showPatch = true

[credential]
  helper = osxkeychain
