[core]
  editor = nvim

[alias]
  undo-commit = reset --soft HEAD^
  unstage = reset HEAD --
  # show latest tag: git lt
  lt = describe --abbrev=0 --tags
  # delete tag: git dt <tag name>
  dt = tag --delete
  # delete remote tag: git drt <tag name>
  drt = push --delete origin

[commit]
  gpgsign = true

[gpg]
  program = gpg2

[pull]
  default = current

[push]
  default = current
  followTags = true

[fetch]
  prune = true

[diff]
  compactionHeuristic = true

[status]
  showUntrackedFiles = all

[stash]
  showPatch = true

[credential]
  helper = osxkeychain
